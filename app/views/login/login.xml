<Page loaded="loaded">
	 <Page.actionBar>
        <ActionBar title="Sign in"></ActionBar>
    </Page.actionBar>
    <StackLayout  orientation="vertical">
       <Image src="~/images/logo.png" stretch="none" horizontalAlignment="center"  />
       <TextField id="email" hint="email address" text="{{ email }}" KeyboardType="email" autocorrect="false" autocapitalizationType="none"/>
       <TextField hint="password" text="{{ password }}" secure="true"/>
     
       <Button text="Sign IN" tap="signIn"/>
       <Button text="Sign Up For Groceries" class="link" tap="register" />

    </StackLayout>
    
</Page>